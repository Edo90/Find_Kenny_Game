<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="363dp"
            android:layout_height="367dp"
            android:id="@+id/gridLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:rowCount="3" app:columnCount="3" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textView">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView1" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView2" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView3" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView4" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView5" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView6" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="1"
                app:layout_row="2"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView7" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_column="2"
                app:layout_row="2"
                app:srcCompat="@drawable/kenny" android:id="@+id/imageView8" android:onClick="increaseScore"/>

    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:text="Points: 0"
            android:layout_width="203dp"
            android:layout_height="76dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:textAlignment="center" android:gravity="center" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Left: 0"
            android:layout_width="159dp"
            android:layout_height="63dp"
            android:id="@+id/textView2" android:textSize="24sp"
            android:textAlignment="center" android:gravity="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>